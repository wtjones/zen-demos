{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/larse",
            "args": [
                "${workspaceFolder}/tests/data/comment1.lsp"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "larse tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/tests",
            "args": [
                "${input:testName}"
            ],
            "cwd": "${workspaceFolder}",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "CMake: build"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "pickString",
            "description": "Select the test to run",
            "options": [
                "TEST_PARSE",
                "TEST_PARSE_COMMENT",
                "TEST_PARSE_FILE",
                "TEST_PARSE_SCRIPT",
                "TEST_PARSE_SINGLE",
                "TEST_PARSE_HEX",
                "TEST_PARSE_SYMBOL",
                "TEST_PARSE_FIXED",
                "TEST_REPR_EXPRESSION",
                "TEST_REPR_SCRIPT",
                "TEST_GET_PROPERTY",
                "TEST_GET_LIST"
            ],
            "default": "TEST_PARSE"
        }
    ]
}